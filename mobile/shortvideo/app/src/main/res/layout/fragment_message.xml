<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black">

    <!-- Not logged in state -->
    <LinearLayout
        android:id="@+id/layout_not_login"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone">

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/ic_message"
            app:tint="@color/text_secondary" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/please_login"
            android:textColor="@color/text_secondary"
            android:textSize="16sp" />

        <Button
            android:id="@+id/btn_login"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_marginTop="24dp"
            android:background="@drawable/bg_button_primary"
            android:paddingHorizontal="48dp"
            android:text="@string/login"
            android:textColor="@color/black" />

    </LinearLayout>

    <!-- Main content -->
    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/swipe_refresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:id="@+id/layout_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Title -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/nav_message"
                    android:textColor="@color/white"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <!-- Message types -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:orientation="vertical">

                    <!-- Fans -->
                    <RelativeLayout
                        android:id="@+id/layout_fans"
                        android:layout_width="match_parent"
                        android:layout_height="72dp"
                        android:background="?attr/selectableItemBackground"
                        android:paddingHorizontal="8dp">

                        <ImageView
                            android:id="@+id/iv_fans_icon"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:layout_centerVertical="true"
                            android:padding="12dp"
                            android:src="@drawable/ic_fans"
                            android:background="@drawable/bg_icon_circle"
                            app:tint="@color/primary" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="16dp"
                            android:layout_toEndOf="@id/iv_fans_icon"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/new_fans"
                                android:textColor="@color/white"
                                android:textSize="16sp" />

                            <TextView
                                android:id="@+id/tv_fans_preview"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:ellipsize="end"
                                android:maxLines="1"
                                android:text="@string/no_data"
                                android:textColor="@color/text_secondary"
                                android:textSize="13sp" />

                        </LinearLayout>

                        <TextView
                            android:id="@+id/tv_fans_badge"
                            android:layout_width="wrap_content"
                            android:layout_height="20dp"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:background="@drawable/bg_badge"
                            android:gravity="center"
                            android:minWidth="20dp"
                            android:paddingHorizontal="6dp"
                            android:textColor="@color/white"
                            android:textSize="11sp"
                            android:visibility="gone" />

                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginStart="72dp"
                        android:background="@color/divider" />

                    <!-- Likes -->
                    <RelativeLayout
                        android:id="@+id/layout_likes"
                        android:layout_width="match_parent"
                        android:layout_height="72dp"
                        android:background="?attr/selectableItemBackground"
                        android:paddingHorizontal="8dp">

                        <ImageView
                            android:id="@+id/iv_likes_icon"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:layout_centerVertical="true"
                            android:padding="12dp"
                            android:src="@drawable/ic_like"
                            android:background="@drawable/bg_icon_circle"
                            app:tint="@color/red" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="16dp"
                            android:layout_toEndOf="@id/iv_likes_icon"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/new_likes"
                                android:textColor="@color/white"
                                android:textSize="16sp" />

                            <TextView
                                android:id="@+id/tv_likes_preview"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:ellipsize="end"
                                android:maxLines="1"
                                android:text="@string/no_data"
                                android:textColor="@color/text_secondary"
                                android:textSize="13sp" />

                        </LinearLayout>

                        <TextView
                            android:id="@+id/tv_likes_badge"
                            android:layout_width="wrap_content"
                            android:layout_height="20dp"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:background="@drawable/bg_badge"
                            android:gravity="center"
                            android:minWidth="20dp"
                            android:paddingHorizontal="6dp"
                            android:textColor="@color/white"
                            android:textSize="11sp"
                            android:visibility="gone" />

                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginStart="72dp"
                        android:background="@color/divider" />

                    <!-- Comments -->
                    <RelativeLayout
                        android:id="@+id/layout_comments"
                        android:layout_width="match_parent"
                        android:layout_height="72dp"
                        android:background="?attr/selectableItemBackground"
                        android:paddingHorizontal="8dp">

                        <ImageView
                            android:id="@+id/iv_comments_icon"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:layout_centerVertical="true"
                            android:padding="12dp"
                            android:src="@drawable/ic_comment"
                            android:background="@drawable/bg_icon_circle"
                            app:tint="@color/blue" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="16dp"
                            android:layout_toEndOf="@id/iv_comments_icon"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/new_comments"
                                android:textColor="@color/white"
                                android:textSize="16sp" />

                            <TextView
                                android:id="@+id/tv_comments_preview"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:ellipsize="end"
                                android:maxLines="1"
                                android:text="@string/no_data"
                                android:textColor="@color/text_secondary"
                                android:textSize="13sp" />

                        </LinearLayout>

                        <TextView
                            android:id="@+id/tv_comments_badge"
                            android:layout_width="wrap_content"
                            android:layout_height="20dp"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:background="@drawable/bg_badge"
                            android:gravity="center"
                            android:minWidth="20dp"
                            android:paddingHorizontal="6dp"
                            android:textColor="@color/white"
                            android:textSize="11sp"
                            android:visibility="gone" />

                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginStart="72dp"
                        android:background="@color/divider" />

                    <!-- @me -->
                    <RelativeLayout
                        android:id="@+id/layout_at_me"
                        android:layout_width="match_parent"
                        android:layout_height="72dp"
                        android:background="?attr/selectableItemBackground"
                        android:paddingHorizontal="8dp">

                        <ImageView
                            android:id="@+id/iv_at_icon"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:layout_centerVertical="true"
                            android:padding="12dp"
                            android:src="@drawable/ic_at"
                            android:background="@drawable/bg_icon_circle"
                            app:tint="@color/green" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="16dp"
                            android:layout_toEndOf="@id/iv_at_icon"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/at_me"
                                android:textColor="@color/white"
                                android:textSize="16sp" />

                            <TextView
                                android:id="@+id/tv_at_preview"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:ellipsize="end"
                                android:maxLines="1"
                                android:text="@string/no_data"
                                android:textColor="@color/text_secondary"
                                android:textSize="13sp" />

                        </LinearLayout>

                        <TextView
                            android:id="@+id/tv_at_badge"
                            android:layout_width="wrap_content"
                            android:layout_height="20dp"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:background="@drawable/bg_badge"
                            android:gravity="center"
                            android:minWidth="20dp"
                            android:paddingHorizontal="6dp"
                            android:textColor="@color/white"
                            android:textSize="11sp"
                            android:visibility="gone" />

                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginStart="72dp"
                        android:background="@color/divider" />

                    <!-- System -->
                    <RelativeLayout
                        android:id="@+id/layout_system"
                        android:layout_width="match_parent"
                        android:layout_height="72dp"
                        android:background="?attr/selectableItemBackground"
                        android:paddingHorizontal="8dp">

                        <ImageView
                            android:id="@+id/iv_system_icon"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:layout_centerVertical="true"
                            android:padding="12dp"
                            android:src="@drawable/ic_notification"
                            android:background="@drawable/bg_icon_circle"
                            app:tint="@color/purple" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="16dp"
                            android:layout_toEndOf="@id/iv_system_icon"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/system_msg"
                                android:textColor="@color/white"
                                android:textSize="16sp" />

                            <TextView
                                android:id="@+id/tv_system_preview"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:ellipsize="end"
                                android:maxLines="1"
                                android:text="@string/no_data"
                                android:textColor="@color/text_secondary"
                                android:textSize="13sp" />

                        </LinearLayout>

                        <TextView
                            android:id="@+id/tv_system_badge"
                            android:layout_width="wrap_content"
                            android:layout_height="20dp"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:background="@drawable/bg_badge"
                            android:gravity="center"
                            android:minWidth="20dp"
                            android:paddingHorizontal="6dp"
                            android:textColor="@color/white"
                            android:textSize="11sp"
                            android:visibility="gone" />

                    </RelativeLayout>

                </LinearLayout>

            </LinearLayout>

        </ScrollView>

    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

</FrameLayout>
